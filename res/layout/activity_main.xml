<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.unitconvertor.MainActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/ButtonTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonBack"
        android:layout_below="@+id/buttonBack"
        android:text="Temperature"
        android:onClick="handleClickTemperature" />

    <Button
        android:id="@+id/ButtonWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ButtonTemperature"
        android:layout_below="@+id/ButtonTemperature"
        android:text="Weight"
		android:onClick="handleClickWeight"/>

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="Distance"
        android:onClick="handleClickDistance" />

</RelativeLayout>

